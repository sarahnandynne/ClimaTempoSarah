<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClimaTempoSarah.MainPage"
             Shell.NavBarIsVisible="false">
<Grid ColumnSpacing="10"
      RowSpacing="10">

<Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
</Grid.RowDefinitions>

<Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
</Grid.ColumnDefinitions>

<Image Source="diachuvosodenoite.jpg"
       Grid.ColumnSpan="3"
       Grid.RowSpan="5"
       Aspect="AspectFill"/>

<Frame  Grid.Row="1"
        Grid.RowSpan="2"
        Grid.Column="0"
        BackgroundColor="#55FFFFFF">
</Frame>

<Frame  Grid.Row="1"
        Grid.Column="1"
        BackgroundColor="#55FFFFFF">
</Frame>

<Frame  Grid.Row="1"
        Grid.Column="2"
        BackgroundColor="#55FFFFFF">
</Frame>

<Frame  Grid.Row="2"
        Grid.Column="1"
        BackgroundColor="#55FFFFFF">
</Frame>

<Frame  Grid.Row="2"
        Grid.Column="2"
        BackgroundColor="#55FFFFFF">
</Frame>

<Frame  Grid.Row="4"
        Grid.Column="0"
        Grid.ColumnSpan="3"
        BackgroundColor="#55FFFFFF">
</Frame>

</Grid>
</ContentPage>
